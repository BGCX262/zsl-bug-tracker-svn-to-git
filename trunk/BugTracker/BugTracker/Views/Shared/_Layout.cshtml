<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @* Global Stylesheets *@
    <link href="@Url.Content("~/Content/themes/custom/jquery-ui-1.10.3.custom.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/sitestyles.css")" rel="stylesheet" type="text/css" />
    @RenderSection("styles", false)
    
    
    @* JavaScript Libraries *@
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    

    @* User Scripts *@
    <script src="@Url.Content("~/Scripts/local-scripts/global.js")" type="text/javascript"></script>
    @RenderSection("scripts", false)
</head>
<body>
    <div id="wrapper">
        <div id="pgHeader">                
        <img id="zsllogo" alt="" src="@Url.Content("~/Content/images/zsl-logo.jpg")" />
        <span>Bug Tracker</span>        
        </div>
        <div id="pgContent">
            @RenderBody()
        </div>
       @* <div id="pgFooter">
            <p>&copy; Copywright 2013, Zylog Systems Limited.Best viewed in resolution 1000x800</p>
        </div>*@
    </div>
</body>
</html>
